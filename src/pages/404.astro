---
import MainLayout from '@root/layouts/main.astro'
import { Image } from 'astro:assets';
import errorImg from '@root/images/error-404.png'
import Button from '@components/button.astro';
---
<MainLayout title = "AiMirghani | 404 - Page Not Found">
    <div class="flex flex-col items-center justify-items-center gap-7 place-content-center px-4 text-center z-50">
        <Image src={errorImg} alt="404" width="250" height="250" class="mt-10" />
        <h1 class="text-5xl font-bold text-neutral-700">Page Not Found</h1>
        <p class="text-2xl mb-10 font-semibold text-neutral-600">
            Sorry, we couldn't find the page you were looking for.
        </p>
        <Button text="Go Back Home" link="/" />
    </div>
</MainLayout>

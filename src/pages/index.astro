<style is:global>
  .content {
      max-width: 800px;
      font-size: 16px;
      margin: 0 auto;
      padding: 8rem 0;
      border-radius: 0.75rem;
    }
    .content pre {
      border-radius: 0.75rem;
  }
    .content pre > code {
      display: grid; /*  this is way the line will span whole width of `code` component */
      padding: 1.2rem 0 1.2rem 0rem;
      background-color: #1E293B;
      /* color: white; */
      border-radius: 0.75rem;
  }

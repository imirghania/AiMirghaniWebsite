---
import * as katex from 'katex';

const { formula='', position="inline" } = Astro.props;

const html = katex.renderToString(formula, {throwOnError: false});
---

{
	position === "center" ? (
	<div class="text-center">
		<span set:html={html} />
	</div>
	) : (
	<span set:html={html} class="text-start" />
	)
}